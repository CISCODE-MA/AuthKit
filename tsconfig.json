{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2019",
    "declaration": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": false,
    "baseUrl": ".",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "types": [
      "node"
    ],
    "paths": {
      "@models/*": [
        "src/models/*"
      ],
      "@dtos/*": [
        "src/dtos/*"
      ],
      "@repos/*": [
        "src/repositories/*"
      ],
      "@services/*": [
        "src/services/*"
      ],
      "@controllers/*": [
        "src/controllers/*"
      ],
      "@config/*": [
        "src/config/*"
      ],
      "@middleware/*": [
        "src/middleware/*"
      ],
      "@utils/*": [
        "src/utils/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}